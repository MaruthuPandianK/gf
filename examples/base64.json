{
  "flags": "-HnroE",
  "pattern": "([^A-Za-z0-9+/=]|^)(eyJ[A-Za-z0-9+/=]{20,}|YTo[A-Za-z0-9+/=]{20,}|Tzo[A-Za-z0-9+/=]{20,}|PD[89][A-Za-z0-9+/=]{20,}|aHR0cHM6L[A-Za-z0-9+/=]{20,}|aHR0cDo[A-Za-z0-9+/=]{20,}|rO0[A-Za-z0-9+/=]{20,})",
  "description": "Detects suspicious long Base64-encoded strings indicating possible JWTs, serialized objects, or encoded URLs. Designed to avoid short false positives.",
  "severity": "high",
  "authors": ["maruthu"],
  "reference": [
    "https://cheatsheetseries.owasp.org/cheatsheets/Testing_for_Base64_Encoding.html",
    "https://portswigger.net/web-security/jwt",
    "https://owasp.org/www-project-web-security-testing-guide/latest/4-Web_Application_Security_Testing/07-Input_Validation_Testing/01-Testing_for_Base64_Encoding"
  ]
}
